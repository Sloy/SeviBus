<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextFavorita">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/rojo_sevibus</item>
        <item name="android:textSize">37sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainFavoritaLayout">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="MainFavoritaTexto">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PullToRefreshTextStyle">
        <!--<item name="android:textSize"></item>-->
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ff818181</item>
    </style>

</resources>