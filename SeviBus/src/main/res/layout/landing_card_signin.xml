<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="32dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="72dp"
    tools:showIn="@layout/activity_landing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        >

        <TextView
            android:id="@+id/landing_signin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Inicio de sesión"
            android:textColor="?colorPrimary"
            android:textSize="21sp"/>

        <FrameLayout
            android:id="@+id/landing_signin_icon_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/landing_signin_rationale"
            android:layout_below="@+id/landing_signin_title"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/landing_signin_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_cloud_black_24px"/>
        </FrameLayout>

        <TextView
            android:id="@+id/landing_signin_rationale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/landing_signin_buttons"
            android:layout_marginBottom="48dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="Guarda tus paradas favoritas y nos las pierdas nunca más"
            android:textSize="17sp"/>

        <FrameLayout
            android:id="@+id/landing_signin_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/landing_signin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Permitir"
                    app:buttonSize="wide"/>

                <TextView
                    android:id="@+id/landing_signin_reject"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:text="Ahora no"
                    android:textColor="?android:textColorSecondary"/>
            </LinearLayout>

            <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                android:id="@+id/landing_signin_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:color="?colorAccent"
                android:radius="8dp"
                app:dd_animationDuration="500"
                app:dd_horizontalSpacing="16dp"
                app:dd_numDots="3"
                app:dd_scaleMultiplier="1.5"
                />

        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>